# YAML Lint Configuration
# docker-compose.yml ve diğer YAML dosyaları için linting

extends: default

rules:
  # Line length
  line-length:
    max: 120
    level: warning
  
  # Indentation
  indentation:
    spaces: 2
    indent-sequences: true
  
  # Trailing spaces
  trailing-spaces:
    level: error
  
  # Truthy values
  truthy:
    check-keys: false
  
  # Comments
  comments:
    min-spaces-from-content: 1
  
  # Document start
  document-start:
    present: false
  
  # Empty lines
  empty-lines:
    max: 1
    max-start: 0
    max-end: 0 