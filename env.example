# ============================================
# BizGenciz Social Platform - Environment Variables
# ============================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# Protokol 0: Mutlak tekrarlanabilirlik için tüm değerler burada tanımlanmalı

# ============================================
# PROJE KONFİGÜRASYONU
# ============================================
PROJECT_NAME=bizgenciz
NODE_ENV=development

# ============================================
# UYGULAMA PORTLARI
# ============================================
APP_PORT_HOST=3000
APP_PORT_CONTAINER=3000
POSTGRES_PORT_HOST=5432
REDIS_PORT_HOST=6379
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# ============================================
# VERİTABANI KONFİGÜRASYONU
# ============================================
POSTGRES_USER=bizgenciz_user
POSTGRES_PASSWORD=bizgenciz_password
POSTGRES_DB=bizgenciz_db
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}"
DIRECT_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}"

# ============================================
# REDIS KONFİGÜRASYONU (Cache & Session Management)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL="redis://${REDIS_HOST}:${REDIS_PORT}"

# Redis Cache TTL Ayarları (saniye)
REDIS_CACHE_TTL_SHORT=300      # 5 dakika
REDIS_CACHE_TTL_MEDIUM=1800    # 30 dakika
REDIS_CACHE_TTL_LONG=3600      # 1 saat
REDIS_CACHE_TTL_VERY_LONG=86400 # 24 saat

# Redis Rate Limiting Ayarları
REDIS_RATE_LIMIT_API=100       # API: 100 request/dakika
REDIS_RATE_LIMIT_LOGIN=5       # Login: 5 deneme/15 dakika
REDIS_RATE_LIMIT_REGISTER=3    # Register: 3 kayıt/1 saat
REDIS_RATE_LIMIT_EMAIL=10      # Email: 10 e-posta/1 saat

# ============================================
# SUPABASE KONFİGÜRASYONU (BaaS Platform)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ============================================
# NEXT.JS KONFİGÜRASYONU
# ============================================
NEXTAUTH_URL="http://localhost:${APP_PORT_HOST}"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXT_PUBLIC_APP_URL="http://localhost:${APP_PORT_HOST}"

# ============================================
# DIŞ SERVİSLER (Opsiyonel)
# ============================================
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
# STRIPE_SECRET_KEY="your-stripe-secret-key"

# ============================================
# GELİŞTİRME ARAÇLARI (Opsiyonel)
# ============================================
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
